generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  cpf       String   @unique
  email     String   @unique
  password  String
  wallet    Wallet?  // Relação 1:1
  createdAt DateTime @default(now())
}

model Wallet {
  id        String   @id @default(uuid())
  balance   Int      @default(0) // Valor em centavos!
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  version   Int      @default(0) // Para Concorrência (Optimistic Lock)
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Int
  payerId     String // Quem pagou
  payeeId     String // Quem recebeu
  createdAt   DateTime @default(now())
}